{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Culture API",
    "description": "Get movies, series or musics data."
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Movies",
      "description": "Movies endpoints"
    },
    {
      "name": "Series",
      "description": "Series endpoints"
    },
    {
      "name": "Musics",
      "description": "Musics endpoints"
    }
